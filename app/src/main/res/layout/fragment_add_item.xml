<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wardrobeapp.camera.AddItemFragment">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:id="@+id/capturePhotoButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:onClick="onCapturePhoto"
        android:src="@android:drawable/ic_menu_camera" />

    <ImageButton
        android:id="@+id/choosePhotoButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/capturePhotoButton"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_toEndOf="@+id/capturePhotoTextView"
        android:layout_toRightOf="@+id/capturePhotoTextView"
        android:src="@android:drawable/ic_menu_gallery" />

    <TextView
        android:id="@+id/capturePhotoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/capturePhotoButton"
        android:layout_alignStart="@+id/capturePhotoButton"
        android:layout_below="@+id/capturePhotoButton"
        android:layout_marginTop="24dp"
        android:text="@string/capture_photo" />

    <TextView
        android:id="@+id/choosePhotoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/capturePhotoTextView"
        android:layout_alignBottom="@+id/capturePhotoTextView"
        android:layout_alignLeft="@+id/choosePhotoButton"
        android:layout_alignStart="@+id/choosePhotoButton"
        android:text="@string/choose_photo" />
</RelativeLayout>
